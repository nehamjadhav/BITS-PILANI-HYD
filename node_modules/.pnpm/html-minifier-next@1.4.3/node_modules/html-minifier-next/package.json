{
  "author": "Jens Oliver Meiert",
  "bin": {
    "html-minifier-next": "./cli.js"
  },
  "bugs": "https://github.com/j9t/html-minifier-next/issues",
  "dependencies": {
    "change-case": "^4.1.2",
    "clean-css": "~5.3.3",
    "commander": "^14.0.0",
    "entities": "^6.0.1",
    "relateurl": "^0.2.7",
    "terser": "^5.44.0"
  },
  "description": "Highly configurable, well-tested, JavaScript-based HTML minifier.",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@jest/globals": "^30.1.2",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "alpinejs": "^3.14.9",
    "commitlint-config-non-conventional": "^1.0.1",
    "eslint": "^9.33.0",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "jest": "^30.1.3",
    "lint-staged": "^16.1.5",
    "rollup": "^4.50.0",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "vite": "^7.1.5"
  },
  "exports": {
    ".": {
      "import": "./src/htmlminifier.js",
      "require": "./dist/htmlminifier.cjs"
    },
    "./dist/*": "./dist/*.js",
    "./package.json": "./package.json"
  },
  "files": [
    "cli.js",
    "dist/",
    "src/"
  ],
  "homepage": "https://j9t.github.io/html-minifier-next/",
  "keywords": [
    "cli",
    "compress",
    "compressor",
    "css",
    "html",
    "htmlmin",
    "javascript",
    "min",
    "minification",
    "minifier",
    "minify",
    "optimize",
    "optimizer",
    "pack",
    "packer",
    "parse",
    "parser",
    "terser",
    "uglifier",
    "uglify"
  ],
  "license": "MIT",
  "main": "./dist/htmlminifier.cjs",
  "module": "./src/htmlminifier.js",
  "name": "html-minifier-next",
  "overrides": {
    "glob": "^10.0.0",
    "inflight": "npm:@nodelib/fs.stat@^3.0.0"
  },
  "overrides_comment": "@@ Remove when Jest fixes deprecated glob@7.2.3 and inflight dependencies",
  "repository": "https://github.com/j9t/html-minifier-next.git",
  "scripts": {
    "build": "rollup -c",
    "build:docs": "vite build --base /html-minifier-next/ --outDir build",
    "deploy": "npm run build && npm run build:docs",
    "lint": "eslint .",
    "prepack": "npm run build",
    "prepare": "husky",
    "serve": "npm run build && vite",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --watch"
  },
  "type": "module",
  "version": "1.4.3"
}